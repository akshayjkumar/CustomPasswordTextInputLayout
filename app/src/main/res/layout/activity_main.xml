<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20px"
    tools:context="ajdev.com.ltrtlpasswordtextinputlayout.MainActivity">

    <ajdev.com.ltrtlpasswordtextinputlayout.views.LTRTLPasswordTIL
        android:id="@+id/passwordTIL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:layoutDirection="locale"
        android:textAlignment="viewStart"
        android:textDirection="locale"
        app:errorTextAppearance="@style/AppTheme.TextErrorAppearance"
        app:passwordToggleEnabled="true">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/passwordTIET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:hint="@string/password_hint"
            android:inputType="textPassword"
            android:layoutDirection="locale"
            android:maxLines="1"
            android:textAlignment="viewStart"
            android:textDirection="locale" />

    </ajdev.com.ltrtlpasswordtextinputlayout.views.LTRTLPasswordTIL>

</RelativeLayout>
