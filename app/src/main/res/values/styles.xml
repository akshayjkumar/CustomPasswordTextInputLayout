<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.TextErrorAppearance" parent="@android:style/TextAppearance">
        <!-- Error message appearance here -->
        <item name="android:textColor">@color/colorRed</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="AppTheme.PasswordGoodAppearance" parent="@android:style/TextAppearance">
        <!-- Error message appearance here -->
        <item name="android:textColor">@color/colorOrangeYellow</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="AppTheme.PasswordStrongAppearance" parent="@android:style/TextAppearance">
        <!-- Error message appearance here -->
        <item name="android:textColor">@color/colorGreen</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">12sp</item>
    </style>

</resources>
